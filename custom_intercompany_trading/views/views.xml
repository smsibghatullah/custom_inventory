        <field name="domain">[('move_type', 'in', ('out_invoice', 'out_refund')), ('company_id', 'in', context.get('allowed_company_ids'))]</field>
    </record>
    
    <record id="account.action_account_payments" model="ir.actions.act_window">
        <field name="domain">[('company_id', 'in', context.get('allowed_company_ids'))]</field>
    </record>
    
    <record id="account.open_account_journal_dashboard_kanban" model="ir.actions.act_window">
        <field name="domain">[('company_id', 'in', context.get('allowed_company_ids'))]</field>
    </record>

    <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="domain">[('move_type', 'in', ('in_invoice', 'in_refund')), ('company_id', 'in', context.get('allowed_company_ids'))]</field>
    </record>
    
    <record id="account.action_account_payments_payable" model="ir.actions.act_window">
        <field name="domain">[('company_id', 'in', context.get('allowed_company_ids'))]</field>
    </record>


</odoo>
