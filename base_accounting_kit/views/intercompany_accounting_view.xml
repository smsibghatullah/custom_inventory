<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sales_invoice_parameter_form_view" model="ir.ui.view">
            <field name="name">sales.invoice.parameter.form</field>
            <field name="model">sales.invoice.parameter</field>
            <field name="arch" type="xml">
                <form string="Sales Invoice Parameters">
                    <sheet>
                        <group>
                            <group string="Company Details">
                                <field name="source_company_id"/>
                                <field name="dest_company_id"/>

                                <field name="source_customer_id"/>
                                <field name="dest_vendor_id"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Parameters" name="parameters_page">
                                <group>
                                    <field name="available_sku_category_ids" invisible="1" />
                                    <field name="brand_ids" widget="many2many_tags"/>
                                    <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>

                        <group string="Accounting">
                            <field name="destination_gl_account_id"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sales_invoice_parameter" model="ir.actions.act_window">
            <field name="name">Sales Invoice Parameters</field>
            <field name="res_model">sales.invoice.parameter</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_sales_invoice_parameter_tree" model="ir.ui.view">
            <field name="name">sales.invoice.parameter.tree</field>
            <field name="model">sales.invoice.parameter</field>
            <field name="arch" type="xml">
                <tree string="Sales Invoice Parameters">
                    <field name="source_company_id"/>
                    <field name="dest_company_id"/>
                </tree>
            </field>
        </record>


        <record id="purchase_bill_parameter_form_view" model="ir.ui.view">
            <field name="name">purchase.bill.parameter.form</field>
            <field name="model">purchase.bill.parameter</field>
            <field name="arch" type="xml">
                <form string="Purchase Bill Parameters">
                    <sheet>
                        <group>
                            <group string="Company Details">
                                <field name="source_company_id"/>
                                <field name="dest_company_id"/>

                                <field name="source_vendor_id"/>
                                <field name="dest_customer_id"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Parameters" name="parameters_page">
                                <group>
                                    <field name="available_sku_category_ids" invisible="1" />
                                    <field name="brand_ids" widget="many2many_tags"/>
                                    <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>

                        <group string="Accounting">
                            <field name="destination_gl_account_id"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_purchase_bill_parameter" model="ir.actions.act_window">
            <field name="name">Purchase Bill Parameters</field>
            <field name="res_model">purchase.bill.parameter</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_purchase_bill_parameter_tree" model="ir.ui.view">
            <field name="name">purchase.bill.parameter.tree</field>
            <field name="model">purchase.bill.parameter</field>
            <field name="arch" type="xml">
                <tree string="Purchase Bill Parameters">
                    <field name="source_company_id"/>
                    <field name="dest_company_id"/>
                </tree>
            </field>
        </record>


        <record id="view_move_form_intercompany" model="ir.ui.view">
            <field name="name">account.move.form.intercompany</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="allowed_partner_ids" invisible="1"/>
            </field>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="available_bom_ids" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='bom_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', available_bom_ids)]</attribute>
                </xpath>
                <xpath expr="//field[@name='brand_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', available_brands_ids)]</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', allowed_partner_ids)]</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <group>
                        <field name="available_destination_companies" invisible="1"/>
                        <field name="available_brands_ids" invisible="1"/>

                        <field name="intercompany"/>

                        <field name="source_company_id" invisible="1"/>
                        <field name="destination_company_id"
                            domain="[('id','in', available_destination_companies)]"
                            invisible="intercompany == False"/>

                    </group>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>
