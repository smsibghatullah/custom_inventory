        <record id="action_report_employment_certificate" model="ir.actions.report">
            <field name="name">Survey</field>
            <field name="model">survey.user_input</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_inventory.report_employment_certificate</field>
            <field name="report_file">custom_inventory.report_employment_certificate</field>

            <!-- ðŸ”‘ PDF FILE NAME -->
            <field name="print_report_name">
                'Survey - %s' % (object.survey_id.title or 'Report')
            </field>

            <!-- ðŸ”¥ APPLY CLEAN FORMAT -->
            <field name="paperformat_id" ref="custom_inventory.paperformat_survey_clean"/>

            <field name="binding_model_id" ref="survey.model_survey_user_input"/>
            <field name="binding_type">report</field>
        </record>


        <record id="action_shift_generate_wizard" model="ir.actions.act_window">
            <field name="name">Generate Shifts</field>
            <field name="res_model">shift.generate.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



        <record id="action_shift_assignment_main" model="ir.actions.act_window">
            <field name="name">Main Shift Assignments</field>
            <field name="res_model">shift.assignment.main</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_shift_assignment_root" name="Shift Assignment"
                 />
        <menuitem id="menu_shift_assignment_main" parent="menu_shift_assignment_root"
                  name="Manage Assignments" action="action_shift_assignment_main"
                  />
  
    </data>
