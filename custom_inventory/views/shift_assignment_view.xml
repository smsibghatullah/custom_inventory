<odoo>
    <data>
        <record id="action_shift_assignment" model="ir.actions.act_window">
            <field name="name">Shift Assignments</field>
            <field name="res_model">shift.assignment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_shift_assignment_tree" model="ir.ui.view">
            <field name="name">shift.assignment.tree</field>
            <field name="model">shift.assignment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="supervisor_ids" widget="many2many_tags" />
                    <field name="employee_ids" widget="many2many_tags" />
                    <field name="survey_id"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

       <record id="view_shift_assignment_form" model="ir.ui.view">
            <field name="name">shift.assignment.form</field>
            <field name="model">shift.assignment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id" string="Project" required="1" readonly="state != 'draft'"/>
                                <field name="task_id" string="Task" required="1" readonly="state != 'draft'"/>
                                <field name="supervisor_ids" required="1" readonly="state != 'draft'" widget="many2many_tags" string="Supervisors" domain="[('id', 'not in', employee_ids)]"/>
                            </group>
                            <group>
                                <field name="survey_id" string="Survey Form" required="1" readonly="state != 'draft'" />
                                <field name="employee_ids" required="1" widget="many2many_tags" string="Employees" readonly="state != 'draft'" domain="[('id', 'not in', supervisor_ids)]"/>
                            </group>
                        </group>
                         <notebook>
                         <page string="Working Time">
                                <field name="attendance_ids" readonly="1">
                                    <tree>
                                        <field name="employee_id"/>
                                        <field name="check_in"/>
                                        <field name="check_out"/>
                                    </tree>
                                </field>
                            </page>
                     </notebook>

                    </sheet>
                   
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shift_assignment_main_tree" model="ir.ui.view">
            <field name="name">shift.assignment.main.tree</field>
            <field name="model">shift.assignment.main</field>
            <field name="arch" type="xml">
                <tree string="Shift Assignments">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_shift_assignment_main_form" model="ir.ui.view">
            <field name="name">shift.assignment.main.form</field>
            <field name="model">shift.assignment.main</field>
            <field name="arch" type="xml">
                <form string="Shift Assignment">
                     <header>
                        <button name="action_waiting_for_checkin" type="object" invisible="state != 'draft'" string="Confirm" class="oe_highlight"/>
                        <button name="action_generate_shifts" type="object" invisible="date_to == False or date_from == False or state != 'draft'" string="Generate Shifts" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="state != 'draft'" />
                        </group>
                         <group>
                            <div class="o_form_label">Date</div>
                            <div class="d-flex align-items-center" style="gap: 8px;">
                                <field name="date_to" />
                                <span>to</span>
                                <field name="date_from" />
                            </div>
                        </group>

                        <notebook>
                            <page string="Shift Assignments">
                                <field name="main_shift_assignment_id" readonly="state != 'draft'">
                                    <tree editable="bottom">
                                        <field name="date" />
                                        <field name="project_id" required="1" readonly="state != 'draft'"  options="{'no_create': True}"/>
                                        <field name="task_id" required="1" readonly="state != 'draft'"  options="{'no_create': True}"/>
                                        <field name="supervisor_ids" required="1"  options="{'no_create': True}" readonly="state != 'draft'" widget="many2many_tags" string="Supervisors" domain="[('id', 'not in', employee_ids)]"/>
                                        <field name="employee_ids" required="1"  options="{'no_create': True}" widget="many2many_tags" string="Employees" readonly="state != 'draft'" domain="[('id', 'not in', supervisor_ids)]"/>
                                        <field name="state" readonly="1" />
                                    </tree>
                                </field>
                            </page>
                             <page string="Assigned Forms">
                                <field name="survey_assigned_form_ids" readonly="state != 'draft'" >
                                   <tree editable="bottom">
                                        <field name="survey_type"/>
                                        <field name="project_id" invisible="survey_type == 'task'"   options="{'no_create': True, 'no_create_edit': True}" />
                                        <field name="task_id" invisible="survey_type ==  'project'" options="{'no_create': True, 'no_create_edit': True}" />
                                        <field name="survey_id"/>
                                        <field name="frequency" />
                                        <field name="available_project_ids" column_invisible="True"  invisible="1" />
                                        <field name="available_task_ids" column_invisible="True" invisible="1" />
                                   </tree>
                                </field>
                            </page>
                            <page string="Survey Status">
                                <field name="survey_status_ids" readonly="1">
                                    <tree>
                                        <field name="employee_id"/>
                                        <field name="shift_id" />
                                        <field name="project_id" invisible="project_id == False" />
                                        <field name="task_id" invisible="task_id == False" />
                                        <field name="survey_type"/>
                                        <field name="survey_id"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_shift_generate_wizard" model="ir.ui.view">
            <field name="name">shift.generate.wizard.form</field>
            <field name="model">shift.generate.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Shifts">
                    <group>
                        <field name="project_id" required="1"/>
                        <field name="task_id" required="1"/>
                        <field name="supervisor_ids" domain="[('id', 'not in', employee_ids)]" widget="many2many_tags" required="1"/>
                        <field name="employee_ids" domain="[('id', 'not in', supervisor_ids)]" widget="many2many_tags" required="1"/>
                    </group>
                    <footer>
                        <button string="Generate" type="object" name="action_generate" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_project_form_inherit_survey" model="ir.ui.view">
            <field name="name">project.project.form.inherit.survey</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_project_surveys"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list">
                        <field name="survey_count" string="Surveys" widget="statinfo"/>
                    </button>
                    <button name="action_view_project_surveys_forms"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list">
                        <field name="survey_form_count" string="Surveys Forms" widget="statinfo"/>
                    </button>
                </xpath>
                <field name="date_start" position="after">
                    <field name="pcbu_1_details"/>
                    <field name="pcbu_2_details"/>
                </field>
            </field>
        </record>


        <record id="view_task_form_inherit_survey" model="ir.ui.view">
            <field name="name">project.task.form.inherit.survey</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                        <button name="action_view_task_surveys"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list">
                            <field name="survey_count" string="Surveys" widget="statinfo"/>
                        </button>
                        <button name="action_view_task_surveys_forms"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list">
                        <field name="survey_form_count" string="Surveys Forms" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="view_shift_project_survey_plan_tree" model="ir.ui.view">
            <field name="name">shift.project.survey.plan.tree</field>
            <field name="model">shift.project.survey.plan</field>
            <field name="arch" type="xml">
                <tree string="Shift Survey Plans">
                    <field name="date"/>
                    <field name="project_id"/>
                    <field name="survey_id"/>
                    <field name="frequency"/>
                    <field name="supervisor_ids" widget="many2many_tags"/>
                    <field name="employee_ids" widget="many2many_tags"/>
                    <field name="state"/>
                    <field name="shift_main_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_shift_project_survey_plan_form" model="ir.ui.view">
            <field name="name">shift.project.survey.plan.form</field>
            <field name="model">shift.project.survey.plan</field>
            <field name="arch" type="xml">
                <form string="Shift Survey Plan">
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="project_id"/>
                            <field name="survey_id"/>
                            <field name="frequency"/>
                            <field name="supervisor_ids" widget="many2many_tags"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="state"/>
                            <field name="shift_main_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_shift_task_survey_plan_tree" model="ir.ui.view">
            <field name="name">shift.task.survey.plan.tree</field>
            <field name="model">shift.task.survey.plan</field>
            <field name="arch" type="xml">
                <tree string="Shift Survey Plans">
                    <field name="date"/>
                    <field name="task_id"/>
                    <field name="survey_id"/>
                    <field name="frequency"/>
                     <field name="supervisor_ids" widget="many2many_tags"/>
                    <field name="employee_ids" widget="many2many_tags"/>
                    <field name="state"/>
                    <field name="shift_main_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_shift_task_survey_plan_form" model="ir.ui.view">
            <field name="name">shift.task.survey.plan.form</field>
            <field name="model">shift.task.survey.plan</field>
            <field name="arch" type="xml">
                <form string="Shift Survey Plan">
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="task_id"/>
                            <field name="survey_id"/>
                            <field name="frequency"/>
                            <field name="supervisor_ids" widget="many2many_tags"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="state"/>
                            <field name="shift_main_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        

