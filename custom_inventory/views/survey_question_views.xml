    <record id="view_survey_potential_hazard_tree" model="ir.ui.view">
        <field name="name">survey.potential.hazard.tree</field>
        <field name="model">survey.potential_hazard</field>
        <field name="arch" type="xml">
            <tree string="Potential Hazards / Risks" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="question_id"/>
                <field name="initial_risk_score"/>
                <field name="initial_risk_level"/>
                <field name="post_control_risk_score"/>
                <field name="post_control_risk_level"/>
                <field name="active"/>
            </tree>
        </field>
    </record>        

    <record id="view_survey_potential_hazard_form" model="ir.ui.view">
        <field name="name">survey.potential.hazard.form</field>
        <field name="model">survey.potential_hazard</field>
        <field name="arch" type="xml">
            <form string="Potential Hazard / Risk">
                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="question_id"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>

                        <!-- Initial Risk -->
                        <page string="Initial Risk">
                            <group>
                                <field name="hazard_consequence_id"/>
                                <field name="likelihood_id"/>
                            </group>
                            <group>
                                <field name="initial_risk_score" readonly="1"/>
                                <field name="initial_risk_level" readonly="1"/>
                            </group>
                        </page>

                        <!-- Controls -->
                        <page string="Control Measures">
                            <field name="control_ids" widget="many2many_tags"/>
                        </page>

                        <!-- Post Control Risk -->
                        <page string="Post-Control Risk">
                            <group>
                                <field name="post_control_hazard_consequence_id"/>
                                <field name="post_control_likelihood_id"/>
                            </group>
                            <group>
                                <field name="post_control_risk_score" readonly="1"/>
                                <field name="post_control_risk_level" readonly="1"/>
                            </group>
                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

